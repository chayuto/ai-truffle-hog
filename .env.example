# AI Truffle Hog Environment Configuration
# Copy to .env and fill in values for local development

# ============================================================
# Logging Configuration
# ============================================================
ATH_LOGGING_LEVEL=INFO
ATH_LOGGING_FORMAT=console
# ATH_LOGGING_FILE=logs/ai-truffle-hog.log
ATH_LOGGING_REDACT_SECRETS=true

# ============================================================
# Scanner Configuration
# ============================================================
ATH_SCANNER_MAX_FILE_SIZE_KB=1024
ATH_SCANNER_ENTROPY_THRESHOLD=4.5

# ============================================================
# Validator Configuration
# ============================================================
ATH_VALIDATOR_ENABLED=true
ATH_VALIDATOR_TIMEOUT_SECONDS=10
ATH_VALIDATOR_MAX_CONCURRENT=5
ATH_VALIDATOR_RETRY_COUNT=3

# ============================================================
# Output Configuration
# ============================================================
ATH_OUTPUT_FORMAT=table
ATH_OUTPUT_SHOW_CONTEXT=true
ATH_OUTPUT_CONTEXT_LINES=3

# ============================================================
